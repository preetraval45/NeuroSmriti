# Application
APP_NAME=NeuroSmriti
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=True
SECRET_KEY=your-secret-key-change-in-production-min-32-characters

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/NEUROSMRITI
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=0

# Redis
REDIS_URL=redis://localhost:6379/0

# Security
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256
BCRYPT_ROUNDS=12

# CORS
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# ML Models
ML_MODEL_PATH=./app/ml/models
CUDA_VISIBLE_DEVICES=0
BATCH_SIZE=32
MAX_WORKERS=4

# File Upload
MAX_UPLOAD_SIZE=100  # MB
UPLOAD_DIR=./uploads
ALLOWED_EXTENSIONS=.nii,.nii.gz,.dcm,.jpg,.png,.wav,.mp3

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# External APIs (if needed)
# OPENAI_API_KEY=sk-...
# HUGGINGFACE_TOKEN=hf_...

# Monitoring
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
